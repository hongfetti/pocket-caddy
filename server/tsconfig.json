{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "commonjs", // Use CommonJS for Node compatibility
    "moduleResolution": "node",

    /* Paths */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,

    /* Type definitions */
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}